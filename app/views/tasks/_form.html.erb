<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'Task' %>
  <%= f.text_field :content %>

  <%= f.label :status, 'Status' %>
  <%= f.text_field :status %>

<p>※内容は10文字以内、空白はなしで入力しましょう</p>
  <%= f.submit '投稿' %>
<% end %>